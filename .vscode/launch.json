	"version": "0.2.0",
	"configurations": [

		{
			"name": "Manager",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/manager",
			"env": {
				"WATCH_NAMESPACE": "default",
				// "INSECURE_NO_NAMESPACE_ISOLATION": "true",
				"OPERATOR_NAME": "pulumi-kubernetes-operator",
			},
			"args": [
				"--zap-level=debug"
			]
		},
		// {
		// 	"name": "Test",
		// 	"port": 9229,
		// 	"request": "attach",
		// 	"skipFiles": [
		// 		"<node_internals>/**"
		// 	],
		// 	"type": "pulumi"
		// },
		{
			"name": ".NET Core Attach",
			"type": "coreclr",
			"request": "attach",
			"processId": "${command:pickProcess}",
		},
		{
			"name": "NodeJS Attach",
			"processId": "${command:PickProcess}",
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node",
			"continueOnAttach": true
		},
		{
			"name": "Python: Attach",
			"type": "python",
			"request": "attach",
			"connect": {
				"host": "127.0.0.1",
				"port": 51388
			},
			// "preLaunchTask": "Run pulumi up and wait to start",
			// "pathMappings": [
			// 	{
			// 		"localRoot": "${workspaceFolder}",
			// 		"remoteRoot": "."
			// 	}
			// ],
			"justMyCode": true
		},
		
		{
			"name": "Go: Attach Remote",
			"type": "go",
			"request": "attach",
			"mode": "remote",
			"host": "127.0.0.1",
			"port": 63053,
		},
		{
			"name": "Go: Attach Local",
			"type": "go",
			"request": "attach",
			"mode": "local",
			"processId": 42331,
		}
	]
}
